{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
          "./node_modules/*"
      ],
      "entities/*": ["./src/entities/*"],
      "middlewares/*": ["./src/middlewares/*"],
      "service/*": ["./src/services/*"],
      "utils/*": ["./src/utils/*"],
      "configs/*": ["./src/configs/*"],
    },
    "resolveJsonModule" : true
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}